{
    "name":"Color Picker",
    "description": "A color picker chrome extension",
    "version": "1.0",
    "manifest_version":3,
    "background":{
        "service_worker": "background.js"
    },

    "permissions":[
        "storage",
        "activeTab",
        "scripting"
    ],

    "options_page": "options.html",

    "action":{
        "default_popup":"popup.html"
    },
    "icons":{
        "16":"/images-picker/picker_16.png",
        "32":"/images-picker/picker_32.png",
        "48":"/images-picker/picker_48.png"
    }
}